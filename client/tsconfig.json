{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@apis/*": [
        "./apis/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@stores/*": [
        "./stores/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "scripts/generate-protos.js",
    "./metro.config.js",
    "./eslint.config.js",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
  ]
}